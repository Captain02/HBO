<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="RepliesDao">
    <!-- 可根据自己的需求，是否要使用 -->

    <select id="replieslistPage" resultType="io.renren.common.entity.PageData">
     SELECT
     *
	FROM
	replies
	WHERE
	 topicid = #{pd.topicid}
    </select>
    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO replies(userid,parentid,topicid,repliescontent) VALUES (#{userid},#{parentid},#{topicid},#{repliescontent})
    </insert>
    <insert id="save_replies_like" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO bbs_replies_like(userid,repliesid) VALUES (#{userId},#{repliesid})
    </insert>
</mapper>