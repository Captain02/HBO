<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="CorporationDao">
    <!-- 可根据自己的需求，是否要使用 -->
	<resultMap type="io.renren.modules.corporation.entity.CorporationEntity" id="CorporationMap">
		<id property="id" column="id"/>
		<result property="corname" column="corname"/>
		<result property="corleading" column="corleading"/>
		<result property="cortercher" column="cortercher"/>
		<result property="corworkspace" column="corworkspace"/>
		<result property="createtime" column="createtime"/>
		<result property="corcollege" column="corcollege"/>
		<result property="corfaculty" column="corfaculty"/>
		<result property="corscale" column="corscale"/>
		<result property="fileid" column="fileid"/>
		<result property="videofile" column="videofile"/>
		<collection property="corcrowdList" column="id" select="io.renren.modules.corporation.dao.CorcrowdDao.findcorcrowdById" />
	</resultMap>

    <select id="getlistPage" resultMap="CorporationMap">
	select id,corname,corleading,corscale,createtime,fileid,videofile
	FROM corporation
    </select>

	<select id="byPrimaryId" resultType="map" parameterType="java.lang.Long">
		select id,corname,
		(SELECT name FROM sys_user WHERE user_id=C.corleading)corleading,
		(SELECT value FROM sys_dict WHERE id = C.corcollege)corcollegeName,
		(SELECT value FROM sys_dict WHERE id = C.corfaculty)corfacultyName,
		corscale,fileid,descs,cortercher,videofile,createtime,bannerid
		FROM corporation C
		WHERE id =#{id}
	</select>
	<select id="byIdImages" resultType="io.renren.common.entity.PageData"  parameterType="java.lang.Long">
		SELECT * FROM images WHERE corid=#{id}
	</select>
</mapper>