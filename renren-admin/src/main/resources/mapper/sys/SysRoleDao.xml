<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.modules.sys.dao.SysRoleDao">
    <select resultType="io.renren.common.entity.PageData" id="rolelistPage">
        SELECT r.`role_name`,r.`role_id`,r.`remark`,r.`create_time`,d1.`name`
        FROM sys_role r
        LEFT JOIN  `sys_dept` d1 ON d1.`dept_id`=r.`dept_id`
        WHERE r.`del_flag` = 0
        AND r.`corid`= #{pd.corId,jdbcType=INTEGER}
        <if test="pd.roleName != null and pd.roleName !=''">
            AND r.`role_name` LIKE CONCAT('%',#{pd.roleName,jdbcType=VARCHAR},'%')
        </if>
    </select>

    <select id="selectRoleById" resultType="io.renren.common.entity.PageData">
        SELECT r.`role_name`,r.`corid`,r.`remark`,r.`role_id`,r.`create_time`
        FROM sys_role r
        WHERE r.`del_flag` = 0
        AND r.`role_id`= #{roleId,jdbcType=INTEGER}
    </select>

    <update id="update">
        UPDATE sys_role
        <set>
            <if test="roleName!=null">
                `role_name`=#{roleName,jdbcType=VARCHAR},
            </if>
            <if test="remark!=null">
                `remark`=#{remark,jdbcType=VARCHAR},
            </if>
            <if test="delFlag!=null">
                `del_flag`=#{delFlag,jdbcType=INTEGER},
            </if>
            <if test="corId!=null">
                `corid`=#{corId,jdbcType=INTEGER}
            </if>
        </set>
        WHERE  role_id = #{roleId,jdbcType=INTEGER}
    </update>

    <insert id="save">
        INSERT INTO sys_role(`role_name`,`corid`,`remark`)
        VALUES (#{roleName,jdbcType=VARCHAR},#{corId,jdbcType=INTEGER},#{remark,jdbcType=VARCHAR})
    </insert>

    <!--删除角色权限-->
    <delete id="deleteRolePermission">
        DELETE FROM `sys_role_menu`
        WHERE role_id = #{role_id}
        AND menu_id = #{menu_id}
    </delete>

    <!--添加角色权限-->
    <insert id="saveRolePermission">
        insert into sys_role_menu (role_id,menu_id) values (#{role_id},#{menu_id});
    </insert>

</mapper>