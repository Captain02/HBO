<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="SmsDao">

    <select id="select" resultType="io.renren.common.entity.PageData">
        SELECT `id`,`num`,`compeny`,`remarknum`,`remark`,`price`
        FROM smsnum
        WHERE `num` != 0
        ORDER BY `id`
    </select>
    
    <insert id="saveSmsNotice">
        insert into notice_sms (`num`,`noticeid`) values (#{num},#{noticeid});
    </insert>

    <update id="updatepd">
        UPDATE smsnum SET num = #{num}
        WHERE id = #{id}
    </update>

</mapper>